{
  "name": "iconation/icon-sdk-php",
  "description": "SDK to communicate with the ICON blockchain",
  "keywords": [
    "icon",
    "icx"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Dimitris Frangiadakis",
      "email": "dimitris@frangiadakis.com"
    }
  ],
  "type": "library",
  "require": {
    "php": ">=8.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-gmp": "*",
    "ext-bcmath": "*",
    "simplito/elliptic-php": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "10.*"
  },
  "scripts": {
    "test": "XDEBUG_MODE=coverage php ./vendor/bin/phpunit --colors=always --coverage-html tests/code_coverage_report"
  },
  "autoload": {
    "psr-4": {
      "iconation\\IconSDK\\": "src/"
    }
  }
}
